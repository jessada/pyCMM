from pycmm.settings import PLINK_HAP_ASSOCS_SLURM_DESCRIPTION
from pycmm.app.plink import app_pycmm_plink_hap_assocs_slurm
import argparse

argp = argparse.ArgumentParser(description=PLINK_HAP_ASSOCS_SLURM_DESCRIPTION)
required_group = argp.add_argument_group('required arguments')
required_group.add_argument('-j',
                            dest='jobs_setup_file',
                            metavar="JOBS SETUP FILE",
                            help='a file containing jobs configuration',
                            required=True,
                            )
argp.add_argument('-l',
                  dest='log_file',
                  metavar='FILE',
                  help='log file',
                  default=None)
args = argp.parse_args()
app_pycmm_plink_hap_assocs_slurm(jobs_setup_file=args.jobs_setup_file,
                                 log_file=args.log_file,
                                 )
