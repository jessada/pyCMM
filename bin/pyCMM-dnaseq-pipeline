from pycmm.settings import DNASEQ_PIPELINE_DESCRIPTION
from pycmm.settings import DNASEQ_PIPELINE_DFLT_LOG_FILE
from pycmm.settings import DNASEQ_SLURM_MONITOR_PIPELINE_BIN
from pycmm.flow.gatkbp import GATKBPPipeline
from pycmm.app import app_pycmm_pipeline
import argparse

argp = argparse.ArgumentParser(description=DNASEQ_PIPELINE_DESCRIPTION)
argp.add_argument('-j',
                  dest='jobs_setup_file',
                  metavar="JOBS SETUP FILE",
                  help='a file containing jobs configuration',
                  required=True,
                  )
argp.add_argument('-l',
                  dest='log_file',
                  metavar='FILE',
                  help='log file',
                  default=None)
args = argp.parse_args()
app_pycmm_pipeline(jobs_setup_file=args.jobs_setup_file,
                   log_file=args.log_file,
                   pipeline=GATKBPPipeline,
                   pipeline_description=DNASEQ_PIPELINE_DESCRIPTION,
                   pipeline_bin=DNASEQ_SLURM_MONITOR_PIPELINE_BIN,
                   )
