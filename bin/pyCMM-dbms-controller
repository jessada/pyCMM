from pycmm.settings import DBMS_EXECUTE_DB_JOBS_DESCRIPTION
from pycmm.app.db import app_pycmm_dbms_run_controller
import argparse

argp = argparse.ArgumentParser(description=DBMS_EXECUTE_DB_JOBS_DESCRIPTION)
argp.add_argument('-j',
                  dest='jobs_setup_file',
                  metavar="JOBS SETUP FILE",
                  help='a file containing jobs configuration',
                  required=True,
                  )
argp.add_argument('-l',
                  dest='log_file',
                  metavar='FILE',
                  help='log file',
                  default=None)
args = argp.parse_args()
app_pycmm_dbms_run_controller(jobs_setup_file=args.jobs_setup_file,
                              log_file=args.log_file,
                              )
