from pycmm.settings import PLINK_HAP_ASSOCS_DESCRIPTION
from pycmm.app.plink import app_pycmm_plink_hap_assocs
import argparse

argp = argparse.ArgumentParser(description=PLINK_HAP_ASSOCS_DESCRIPTION)
argp.add_argument('-j',
                  dest='jobs_setup_file',
                  metavar="JOBS SETUP FILE",
                  help='a file containing jobs configuration',
                  required=True,
                  )
argp.add_argument('-l',
                  dest='log_file',
                  metavar='FILE',
                  help='log file',
                  default=None)
args = argp.parse_args()
app_pycmm_plink_hap_assocs(jobs_setup_file=args.jobs_setup_file,
                           log_file=args.log_file,
                           )
